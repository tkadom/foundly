<% title "Foundly Home" %>
<%= image_tag("/images/foundly-man.png", :class => "left") %>
<h2>
  Find things you have lost, report things you have found, collect rewards helping others... 
</h2>
<h3>Enter a Keyword to find an item</h3>
<% form_tag({:controller => 'items', :action => 'index'}, :method => 'get') do %>
  <label>Keyword</label>
    <%= text_field_tag :q, h(params[:q]) %>
    <%= submit_tag 'Search' %>
    <% end %>
    <br />
    <h3>Report a Lost item</h3>
    <%= link_to 'Click Here', new_item_path() %>
<% content_for(:sidebar) do %>
	<div class="box">
		<h3>Help</h3>
		<p>
		Ready to log in?
		<br/>
		<%= link_to '» Click here to log in', new_session_path %>
		</p>
		<p>
		Don't have an account?
		<br/>
		<%= link_to '» Click here to sign up', new_user_path %>
		</p>
		<p>
		Forgot your password?
		<br/>
		<%= link_to '» Click here to retrieve it', forgot_password_path %>
		</p>
	</div>
<% end -%>
